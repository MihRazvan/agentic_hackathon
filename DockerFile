# Use Python 3.10 base image
FROM python:3.10-slim

# Set working directory
WORKDIR /app

# Copy requirements
COPY requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy the agent folder
COPY agent/ ./agent/

# Copy main.py
COPY main.py .

# Expose port 3000
EXPOSE 3000

# Command to run the app
CMD ["python", "main.py"]